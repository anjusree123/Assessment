create table Employee(emp_id int not null,emp_name varchar(20) not null,primary key(emp_id));
create table Department(dep_id int not nul,dep_name varchar(20) not null,primary key(dep_id)))
insert into Employee(emp_id,emp_name) values(value1,value2);
insert into Department(dep_id,dep_name) values(value1,value2);
select Employee.emp_id, Employee.emp_name from Employee cross join Department where DEpartment.dep_name='value';
update Department set Department.dep_name='value2' from Employee cross join Department on Employee.emp_name='name';
delete emp_id,emp_name from Employee cross join Department where DEpartment.dep_name='value';


